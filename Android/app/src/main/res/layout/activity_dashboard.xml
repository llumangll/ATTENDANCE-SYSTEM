<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="24dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvWelcomeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Student"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRollNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: 21BCE000"
            android:textColor="#E3F2FD"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Logout"
            android:textSize="12sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1976D2"
            android:layout_marginTop="12dp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/labelActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active Classes"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_margin="16dp"/>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="ðŸ”„ Refresh"
            android:textSize="12sp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:backgroundTint="#4CAF50"/>

        <ListView
            android:id="@+id/sessionList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/labelActive"
            android:divider="@android:color/transparent"
            android:dividerHeight="8dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false"/>

        <TextView
            android:id="@+id/tvEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No active classes right now.\nCheck back later!"
            android:textSize="16sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    </RelativeLayout>
</LinearLayout>